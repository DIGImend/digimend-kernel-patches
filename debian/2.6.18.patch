+/*
+ * UC-LOGIC WP8060U HID report descriptor has an extra input which is never
+ * used and will result in an extra device when combined with
+ * HID_QUIRK_MULTI_INPUT.
+ */
+static void hid_fixup_uc_logic_descriptor(char *rdesc, int *rsize)
+{
+	/* Minimal sanity check */
+	if (*rsize != 212)
+		return;
+
+	info("Fixing up UC-LOGIC tablet report descriptor");
+
+	/*
+	 * Cut off the first input descriptor (out of 3)
+	 * which is incorrect and is never used.
+	 */
+	*rsize -= 89;
+	memmove(rdesc, rdesc + 89, *rsize);

+ */
+static void usbhid_fixup_uc_logic_descriptor(char *rdesc, int rsize)
+{
+	int new_rsize;
+
+	/* Minimal sanity check */
+	if (rsize != 212)
+		return;
+
+	info("Fixing up UC-LOGIC tablet report descriptor");
+
+	/*
